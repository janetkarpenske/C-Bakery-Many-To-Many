@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model IEnumerable<ToDoList.Models.Treat>

<h1>Treats for @User.Identity.TreatName</h1>

@if (Model.Any())
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
} 
else
{
  <h3>You have not added any treats yet.</h3>
}

<p>@Html.ActionLink("Add New Treat", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>
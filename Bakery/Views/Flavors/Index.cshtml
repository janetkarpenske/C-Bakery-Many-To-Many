@{
  Layout = "_Layout";
}

@using Bakery.Models;
@model List<Bakery.Models.Flavor>;

<h2>Flavors</h2>

@if (@Model.Count == 0)
{
  <h3>You have not added any flavors yet.</h3>
} 

@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
}
@if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
      {
<p>@Html.ActionLink("Add A New Flavor", "Create")</p>
      }
<p>@Html.ActionLink("Home", "Index", "Home")</p>